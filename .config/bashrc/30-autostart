# -----------------------------------------------------
# AUTOSTART
# -----------------------------------------------------

# -----------------------------------------------------
# Fastfetch
# -----------------------------------------------------
if [[ $(tty) == *"pts"* ]]; then
    # Only run fastfetch once per session to save time
    if [ ! -f /dev/shm/fastfetch_run_$USER ]; then
        fastfetch --config examples/13
        touch /dev/shm/fastfetch_run_$USER
    fi
else
    echo
    if [ -f /bin/qtile ]; then
        echo "Start Qtile X11 with command Qtile"
    fi
    if [ -f /bin/hyprctl ]; then
        echo "Start Hyprland with command Hyprland"
    fi
fi
